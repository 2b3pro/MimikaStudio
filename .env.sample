# MimikaStudio Environment Variables
# Copy to .env and modify as needed: cp .env.sample .env

# ============== Server Ports ==============
MIMIKA_PORT=8899                    # Backend uvicorn port (main.py)
MIMIKA_BACKEND_PORT=8899            # Backend port (legacy alias)
MIMIKA_BACKEND_HOST=127.0.0.1      # Backend bind address
MIMIKA_MCP_PORT=8010                # MCP server port (tts_mcp_server.py)

# ============== MCP Server ==============
MIMIKASTUDIO_BACKEND_URL=http://localhost:8899   # Backend URL for MCP proxy
LOG_LEVEL=INFO                                    # MCP server log level

# ============== Paths ==============
# MIMIKA_RUNTIME_HOME=~/MimikaStudio     # Runtime home (models, data, logs)
# MIMIKA_DATA_DIR=                        # Override data directory
# MIMIKA_LOG_DIR=                         # Override log directory
# MIMIKA_OUTPUT_DIR=                      # Override audio output directory
# MIMIKA_PDF_DIR=                         # Override PDF directory

# ============== CORS ==============
# MIMIKA_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============== CosyVoice3 Tuning ==============
# MIMIKA_COSYVOICE3_FP32=false           # Force FP32 (default: FP16)
# MIMIKA_COSYVOICE3_TIMEOUT_SEC=900      # Subprocess timeout
# MIMIKA_COSYVOICE3_MAX_TOKEN_FACTOR=12  # Token length factor
# MIMIKA_COSYVOICE3_MAX_TOKEN_CAP=280    # Max token cap
# MIMIKA_COSYVOICE3_MIN_TOKEN_FLOOR=8    # Min token floor
# MIMIKA_COSYVOICE3_TOPK=20              # Top-K sampling
