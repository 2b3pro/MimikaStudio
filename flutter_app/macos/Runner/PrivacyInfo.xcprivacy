<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
  PrivacyInfo.xcprivacy
  MimikaStudio

  Privacy Manifest for App Store submission.
  MimikaStudio is a local-first application that processes all data on-device.
  No data is collected, tracked, or transmitted to external servers.
-->
<plist version="1.0">
<dict>
    <!-- App does not track users across apps/websites -->
    <key>NSPrivacyTracking</key>
    <false/>

    <!-- No tracking domains used -->
    <key>NSPrivacyTrackingDomains</key>
    <array/>

    <!-- No user data is collected -->
    <key>NSPrivacyCollectedDataTypes</key>
    <array/>

    <!-- Required Reason APIs used by the app or its dependencies -->
    <key>NSPrivacyAccessedAPITypes</key>
    <array>
        <!-- File timestamp APIs - used by file_picker for file selection metadata -->
        <dict>
            <key>NSPrivacyAccessedAPIType</key>
            <string>NSPrivacyAccessedAPICategoryFileTimestamp</string>
            <key>NSPrivacyAccessedAPITypeReasons</key>
            <array>
                <!-- Accessing file timestamps for files explicitly selected by the user -->
                <string>C617.1</string>
            </array>
        </dict>
        <!-- System boot time APIs - used by Flutter framework for timing -->
        <dict>
            <key>NSPrivacyAccessedAPIType</key>
            <string>NSPrivacyAccessedAPICategorySystemBootTime</string>
            <key>NSPrivacyAccessedAPITypeReasons</key>
            <array>
                <!-- Measure elapsed time within the app -->
                <string>35F9.1</string>
            </array>
        </dict>
        <!-- User defaults APIs - used for app settings storage -->
        <dict>
            <key>NSPrivacyAccessedAPIType</key>
            <string>NSPrivacyAccessedAPICategoryUserDefaults</string>
            <key>NSPrivacyAccessedAPITypeReasons</key>
            <array>
                <!-- Access user defaults to read/write app-specific preferences -->
                <string>CA92.1</string>
            </array>
        </dict>
    </array>
</dict>
</plist>
